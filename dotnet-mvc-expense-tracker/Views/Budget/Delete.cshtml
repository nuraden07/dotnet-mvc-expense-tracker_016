@model dotnet_mvc_expense_tracker.Models.Budget
@{
    ViewData["Title"] = "Hapus Budget";
}

<div class="card">
    <div class="card-header"><h3 class="card-title">Hapus Budget</h3></div>
    <div class="card-body">
        <h5>Yakin ingin menghapus data ini?</h5>
        <dl class="row">
            <dt class="col-sm-2">Nama</dt>
            <dd class="col-sm-10">@Model.Nama</dd>
            <dt class="col-sm-2">Total</dt>
            <dd class="col-sm-10">@Model.TotalBudget</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Hapus</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>
