@model dotnet_mvc_expense_tracker.Models.Budget
@{
    ViewData["Title"] = "Detail Budget";
}

<div class="card">
    <div class="card-header"><h3 class="card-title">Detail Budget</h3></div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            <dt class="col-sm-2">Kategori</dt>
            <dd class="col-sm-10">@Model.Kategori?.Nama</dd>
            <dt class="col-sm-2">Nama</dt>
            <dd class="col-sm-10">@Model.Nama</dd>
            <dt class="col-sm-2">Total</dt>
            <dd class="col-sm-10">@Model.TotalBudget</dd>
            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-2">Repeat?</dt>
            <dd class="col-sm-10">@Model.IsRepeat</dd>
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </div>
</div>
