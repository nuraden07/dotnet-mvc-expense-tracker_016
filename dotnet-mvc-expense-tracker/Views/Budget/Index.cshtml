@model IEnumerable<dotnet_mvc_expense_tracker.Models.Budget>
@{
    ViewData["Title"] = "List Budget";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Data Budget</h3>
        <a class="btn btn-primary float-right" href="/Budget/Create">Tambah Data</a>
    </div>
    <div class="card-body">
        <table id="example" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori</th>
                    <th>Nama</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Kategori?.Nama</td>
                        <td>@item.Nama</td>
                        <td>@item.TotalBudget</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="/Budget/Details/@item.Id" class="btn btn-info btn-sm">View</a>
                            <a href="/Budget/Edit/@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/Budget/Delete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#example").DataTable();
        });
    </script>
}
