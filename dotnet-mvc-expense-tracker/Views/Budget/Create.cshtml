@model dotnet_mvc_expense_tracker.Models.Budget
@{
    ViewData["Title"] = "Tambah Budget";
}
<div class="card">
    <div class="card-header"><h3 class="card-title">Tambah Budget</h3></div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label>Kategori</label>
                <select asp-for="KategoriId" asp-items="ViewBag.KategoriList" class="form-control">
                    <option value="">-- Pilih Kategori --</option>
                </select>
            </div>

            <div class="form-group">
                <label>Nama</label>
                <input asp-for="Nama" class="form-control" />
            </div>

            <div class="form-group">
                <label>Deskripsi</label>
                <textarea asp-for="Deskripsi" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label>Total Budget</label>
                <input asp-for="TotalBudget" type="number" step="0.01" class="form-control" />
            </div>

            <div class="form-group">
                <label>Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>

            <div class="form-check">
                <input asp-for="IsRepeat" class="form-check-input" />
                <label asp-for="IsRepeat" class="form-check-label">Is Repeat?</label>
            </div>

            <div class="form-group mt-2">
                <label>Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="active">Active</option>
                    <option value="not active">Not Active</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success mt-2">Simpan</button>
            <a asp-action="Index" class="btn btn-secondary mt-2">Kembali</a>
        </form>
    </div>
</div>
